<%= form_for @movie do |f| %>

    <% if @movie.errors.any? %>
        <% @movie.errors.messages.each_key do |field| %>
            <% @movie.errors.messages[field].each do |msg| %>
                <%= "#{field} #{msg}" %>
            <% end %>
        <% end %>
    <% end %>

    <%= f.label :name %>:
    <%= f.text_field :name %>

    <%= f.label :genre_id %>:
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "select one" %>

    <%= f.submit %>
<% end %>
